                            <?php 
                                include "base/functions/formdata.php";
                                $sql = "SELECT * FROM conteudo AS cn
                                INNER JOIN ministra AS m ON cn.id_ministra = m.id_ministra
                                INNER JOIN cursa AS c ON c.id_cursa = m.id_cursa
                                INNER JOIN disciplina AS d ON d.id_disc = c.id_disc
                                INNER JOIN professor AS p ON p.mat_prof = m.mat_prof
                                WHERE p.id_usur = ".$_SESSION['UsuarioID'];

                                $resultado = mysqli_query($con, $sql);
                                $info = mysqli_fetch_array($resultado); 

                                echo '<div class="col" style="border-left: 2px solid #4f869d;border-bottom: 2px solid #4f869d;border-radius:15px;">
